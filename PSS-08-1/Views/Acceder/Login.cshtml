<div class="col-md-12">
    <input type="button" class="btn btn-primary btn-lg"
           onclick="document.location.href = '@Url.Content("~/")'"
           value="Volver Atras" />
</div>


<main class="mt-10 mb-10 m-auto flex h-screen w-screen flex-col items-center justify-center sm:flex sm:flex-row">
    <section class="from-blue-500 to-blue-800 p-4 border-blue-600 shadow-gray-500 gap-3 relative flex h-2/4 flex-col items-center justify-center rounded-t-lg border-2 bg-gradient-to-b shadow-md transition duration-75 hover:transition hover:duration-75 sm:rounded-l-lg sm:rounded-t-none"
             id="seccion1">
        <article>
            <img src="~/Imagenes/casa.png"
                 alt=""
                 class="w-8 h-10 top-3 left-3 absolute sm:w-16 sm:h-16 sm:top-5 sm:left-5" />
        </article>

        <article class="text-white text-center text-xs sm:text-lg">
            Bienvenido a La mejor Aplicacion de notas Web
        </article>

        <article class="mt-10">
            <img src="~/Imagenes/on.png"
                 alt="Imagen de una casa"
                 class="w-24 h-24 sm:w-32 sm:h-36" />
        </article>
        <article class="bottom-4 text-white absolute text-lg">
            <h2>.....</h2>
        </article>
    </section>

    <section class="from-white to-blue-600 p-4 border-blue-400 shadow-gray-500 gap-3 relative flex h-2/4 flex-col items-center justify-center rounded-b-lg border-2 bg-gradient-to-t shadow-md transition duration-75 hover:transition hover:duration-75 sm:rounded-r-lg sm:rounded-b-none sm:w-1/2"
             id="seccion2">
        <article class="top-2 right-2 absolute flex flex-row text-center text-xs">
            <button class="border-gray-500 p-2 text-black bg-gray-300 rounded-l-lg border-2">
                1
            </button>
            <button class="border-gray-500 p-2 text-black bg-gray-300 rounded-r-lg border-2">
                2
            </button>
        </article>

        <form id="frmAcceder"
              class="left-10 gap-10 absolute flex w-full flex-col">
            <h2 class="text-white font-sans text-4xl font-extralight">
                Iniciar Seccion
            </h2>
            <div>
                <input placeholder=" Correo del Usuario"
                       type="text"
                       name="Usuario"
                       value=""
                       id="Usuario"
                       class="p-2 border-black bg-transparent text-white w-1/2 rounded-sm border-b-2 text-left font-bold outline-none placeholder:text-black" />
            </div>

            <div>
                <input placeholder="Contraseña del Usuario"
                       type="password"
                       name="Password"
                       value=""
                       id="Password"
                       class="p-2 border-black bg-transparent text-white w-1/2 rounded-sm border-b-2 text-left font-bold outline-none placeholder:text-black" />
            </div>

            <div>
                <input type="submit"
                       name="name"
                       class="p-4 from-blue-400 to-blue-800 text-white border-black w-1/2 cursor-pointer rounded-lg border-2 bg-gradient-to-r font-bold transition duration-75 hover:bg-gradient-to-r hover:from-blue-800 hover:to-blue-400 hover:transition hover:duration-75 hover:-translate-y-1 hover:shadow-md hover:shadow-blue-950"
                       value="Entrar" />
            </div>
        </form>
    </section>
</main>

@section script {
    <script>
        $(document)
            .ready(function () {
                $("frmAcceder").submit(function (e) {
                    e.preventDefault();
                    const url = "@Url.Content("~/Acceder/Enter")";
                    const parametros = $(this).serialize();
                    $.post(url, parametros, function (data) {
                        if (data == "1") {
                            document.loc.href = "@Url.Content("~/")";
                            return;
                        } else {
                            alert(data);
                        }
                    });
                });
            });
    </script>
}
